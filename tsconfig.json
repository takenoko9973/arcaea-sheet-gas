{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": [
            "es2020"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "strict": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "rollup.config.mjs"
    ]
}
